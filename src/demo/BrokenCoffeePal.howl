⊐ Activ.Rx; ⊐̥ Activ.Rx.status;

‒ ○ BrokenCoffeePal{

    ‒ Container tap, pot, pouch, cup;
    ‒ Kettle kettle;

    ‒ ⑂ Brew()
    → Pour(tap, kettle)
    ∧ kettle.Switch(✓)
    ∧ Pour(pouch, pot)
    ∧ kettle.boiled ? done : cont
    ∧ Pour(kettle, pot)
    ∧ Wait(minutes: 1)
    ∧ Pour(pot, cup);

    ‒ ⑂ Pour(⊡ src, ⊡ dst) → done;

    ‒ ⑂ Wait(ᆞ minutes) → done;

}

‒ ○ Container{}

‒ ○ Kettle : Container{

    ‒ ㅇ boiled;

    ‒ ㅇ Switch(ㅇ on) → on ? boiled = ✓ : boiled;

}
